<div class="thumbnail col-md-10 col-md-offset-1">
      <div class="title">
        <a class="header-requests"><%= link_to request.title, request_path(request) %> 
        </a>
        <br>
        <span class="req-specs"><strong><%= request.user.first_name %></strong> </span>,
        <span class="req-specs"><%= request.distance_to(@location).round(1) %> miles away</span>
        <span class="req-specs"> - <%= time_ago_in_words(request.created_at) %> ago</span>
      </div>
      <p class="content-requests"><%= raw request.body.truncate(1000, separator: ' ') %></p>
      <hr>
      <div class ="reply-btn">
        <%= link_to "reply", request_path(request), class: "btn btn-success" %>
      </div>
    </div>

